{{ ansible_managed | comment }}

[Unit]
Description=Prometheus MSTeams
After=network-online.target

[Service]
Type=simple
User={{ _prometheus_msteams_system_user }}
Group={{ _prometheus_msteams_system_group }}
ExecStart={{ _prometheus_msteams_binary_install_dir }}/prometheus_msteams \
{% for collector in prometheus_msteams_enabled_collectors -%}
{%   if not collector is mapping %}
    --collector.{{ collector }} \
{%   else -%}
{%     set name, options = (collector.items()|list)[0] -%}
    --collector.{{ name }} \
{%     for k,v in options|dictsort %}
    --collector.{{ name }}.{{ k }}={{ v | quote }} \
{%     endfor -%}
{%   endif -%}
{% endfor -%}
{% for collector in prometheus_msteams_disabled_collectors %}
    --no-collector.{{ collector }} \
{% endfor %}
{% if prometheus_msteams_tls_server_config | length > 0 or prometheus_msteams_http_server_config | length > 0 or prometheus_msteams_basic_auth_users | length > 0 %}
    --web.config=/etc/prometheus_msteams/config.yaml \
{% endif %}
    --web.listen-address={{ prometheus_msteams_web_listen_address }}

SyslogIdentifier=prometheus_msteams
Restart=always
RestartSec=1
StartLimitInterval=0

{% for m in ansible_mounts if m.mount == '/home' %}
ProtectHome=read-only
{% else %}
ProtectHome=yes
{% endfor %}
NoNewPrivileges=yes

{% if prometheus_msteams_systemd_version | int >= 232 %}
ProtectSystem=strict
ProtectControlGroups=true
ProtectKernelModules=true
ProtectKernelTunables=yes
{% else %}
ProtectSystem=full
{% endif %}

[Install]
WantedBy=multi-user.target